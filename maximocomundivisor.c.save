int mcd(int a, int b){
    // Everything divides 0
    if (a == 0){
       return b;
               }

    else if(b==0){
       return a;
                 }

    else if(a==b){
        return a;
                 }
    else if(a>b){
        return mcd(a-b, b);
        return mcd(a, b-a);
                }
                     }
