int mcd(int a, int b);

int main() {
   int a,b,resultado;

   printf("Programa que calcula el Maximo Comun divisor de 2 nÃºmeros:\n");
   printf("Introduce el primer numero: ");
    scanf("%d",&a);
   printf("Introduce el segundo numero: ");
